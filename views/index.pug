extends template.pug

block content
    h2 Books
    p
        a.button(href='/books/new') Add Book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
            tbody
                each book in books
                    tr
                        td 
                            a(href=`/book/${book.id}`)= book.title
                        td= book.author
                        td= book.genre
                        td= book.year